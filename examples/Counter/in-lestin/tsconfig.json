{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "esnext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"jsx": "react-jsx",
		"jsxImportSource": "../../../dist",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"typeRoots": [
			"./node_modules/@types",
			"./@types"
		],
	},
	"include": ["*.ts", "*.tsx"],
	"exclude": ["node_modules", "**/*.spec.ts"]

}
