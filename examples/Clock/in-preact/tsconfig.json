{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "esnext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./node_modules/@types",
			"./@types",
			"./dist"
		],
		"allowJs": false,
		"declaration": true,
		"declarationMap": true
	},
	"include": ["*.ts", "*.tsx"],
	"exclude": ["node_modules", "**/*.spec.ts"]

}
